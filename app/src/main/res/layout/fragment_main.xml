<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="vm"
            type="com.aleksanderkapera.covidstats.viewmodel.MainFragmentViewModel" />

        <variable
            name="statsData"
            type="com.aleksanderkapera.covidstats.domain.AllStatusStatistic" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:custom="http://schemas.android.com/apk/res/com.aleksanderkapera.coronastats"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainFragment">

        <com.aleksanderkapera.covidstats.ui.custom.LatestStatsView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            custom:data="@{statsData}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>