<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.aleksanderkapera.covidstats.viewmodel.MainFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainFragment">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/mainFragment_search"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.aleksanderkapera.covidstats.ui.custom.LatestStatsView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:data="@{viewModel.todayStats}"
            app:layout_constraintTop_toBottomOf="@id/mainFragment_search" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>